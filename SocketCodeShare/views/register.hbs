<form class="form-signin" method="post">

  {{#each errorMessages}}
      <div class="alert alert-danger">
          {{this.msg}}
      </div>
  {{/each}}

  <h2 class="form-signin-heading text-center">New Account</h2>
  <br />

  <input type="text" name="name" class="form-control" placeholder="Name" required>
  <br />

  <input type="email" name="email" class="form-control" placeholder="Email" required>
  <br />

  <input type="password" name="password" class="form-control" placeholder="Password" required>
  <br />

  <input type="password" name="conformPassword" class="form-control" placeholder="Conform Password" required>
  <br />

  <button type="submit" name="button" class="btn btn-lg btn-primary btn-block">Register</button>
  <br />

  <h4 class="text-center">Or</h4>
  <br />
  <a href="/auth/facebook" class="btn btn-lg btn-success btn-block">Sign Up with Facebook</a>

</form>
